function fullpath() {
	echo "$(cd "$(dirname "$1")"; pwd -P)/$(basename "$1")"
}

function sum() {
	awk 'BEGIN{s=0}{s+=$1}END{print s}'
}

function clock() {
    while :; do clear; date +'%I:%M %p' | sed 's/^0//'; sleep 10; done
}

function nclock() {
    open -na "iterm.app" ~/dotfiles/funcs/bin/clock
}

function qclock() {
    osascript -e 'tell application "iterm.app" to quit'
}

