tnlatest() {
    ls -l $TEXTNOTE_DIR | grep -v 'archive' | awk '{print $9}' | sort -r | head -n 1 | cut -f 1 -d '.'
}

tnls() {
    lsa ${TEXTNOTE_DIR}
}

tncat() {
    local latest=$(tnlatest)
    cat "${TEXTNOTE_DIR}/${latest}.txt"
}

tnarcat() {
    local search=$1 
    if [[ -z "$search" ]]; then
        search="archive"
    fi
    \ls -dt $TEXTNOTE_DIR/* | fzf -1 -q ${search} | xargs cat
}

tnsearch() {
    rg -i $1 $TEXTNOTE_DIR
}

alias tnnew='tn open -s TODO -xx'

